<h1>Edit this post!</h1>

<%= form_for @post do |f| %>

    <div>
        <%= f.label :title %>
        <%= f.text_field :title %>
    </div>

    <div>
        <%= f.label :body %>
        <%= f.text_field :body %>
    </div>

    <div>
        <%= f.label :location %>
        <%= f.collection_select(:location_id, Location.all, :id, :campus, prompt: true)  %>
    </div>

    <%= f.submit "Submit these changes!" %>

<% end %>

<%= link_to "Back to the feed!", posts_path %>
